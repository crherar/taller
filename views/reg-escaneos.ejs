<script>

    $(document).ready(function() {
        $('#escaneosExitosos').DataTable({
            "pageLength": 100
        });
    });


    $(document).ready(function() {
        $('#escaneosErroneos').DataTable({
            "pageLength": 100
        });
    });

	
</script>	
    
<script>


    $('#select_all').change(function() {
        var checkboxes = $(this).closest('form').find(':checkbox');
        checkboxes.prop('checked', $(this).is(':checked'));
    });


    $(document).on('submit', '#formReintentoScan', function(){

        var datos = {};

        $("input:checked").each(function() {
                var filaActual = $(this).closest("tr");
                var fila = [];
                var cliente = filaActual.find("td:eq(1)").text();
                var regla = filaActual.find("td:eq(5)").text();
                var ruta = filaActual.find("td:eq(6)").text();
                //fila.push(cliente, regla, ruta);
                datos[cliente] = {regla, ruta}
                //datos.push(fila);
        });

        console.log(datos);

        $.ajax({
                type: "POST",
                url: "/reescanear",
                data: datos,
                success: function(data){
                    alert(data);
                    //console.log(data.reescanConExito + data.reescanConError);
                    // alert('Orden recibida por los siguientes clientes:\n\n' + data.reescanConExito + '\n\nLos siguientes equipos no se encuentran conectados:\n\n' + data.reescanConError);
                    //alert(data.reescanConExito + data.reescanConError);
                }
            });
            return false;
        });

</script>


</body>
